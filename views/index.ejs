<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="js/script.js" type="text/javascript"></script>
    <title>Catalogo Virtual</title>
</head>
<body>
    <main>
        <article>
            <header>
                <a href="">Logo vai AQUI</a>
                <div class="container">
                        <a href="">Home</a>
                        <span onclick="cadastrarFilme()" href="">Cadastrar filme</span>
                        <a href="">Contato</a>
                        <a href="">Sobre</a>
                </div>
                <div class="pesquisa">
                  <form action="http://localhost:3003/pesquisar" method="POST">
                    <label for="dado">Ordenar por: </label>
                    <select name="metodos" id="metodos" onchange="pesquisa()">
                      <option value="">Selecione</option>
                      <option value="AtoZ">De A a Z</option>
                      <option value="ZtoA">De Z a A</option>
                      <option value="postdatemenor">Menor data de Postagem</option>
                      <option value="postdatemaior">Maior data de Postagem</option>
                      <option value="palavra">Palavra Especifica</option>
                    </select>
                    <input type="text" id="info" name="info" placeholder="Adicione informação">
                  </form>
                </div>
            </header>

            <section id="cadastroFilme">
              <div class="cadastro">
                <div id="fecharCadastroFilme" onclick="fecharCadastro()">X</div>
                <form method="POST" action="http://localhost:3003/cadastrar">
                  <label for="fnome">Nome do filme:</label><br>
                  <input type="text" id="nomeFilme" name="nomeFilme" placeholder="Nome do filme"required><br>
                  <label for="fdescricao">Descrição do filme:</label><br>
                  <input type="text" id="descricaoFilme" name="descricaoFilme" placeholder="Descrição do filme" required><br>
                  <label for="ftipo">Tipo:</label><br>
                  <input type="text" id="tipoFilme" name="tipoFilme" placeholder="Tipo do filme" required><br>
                  <label for="fcategoria">Categoria:</label><br>
                  <input type="text" id="categoriaFilme" name="categoriaFilme" placeholder="Categoria do filme" required><br>
                  <label for="fano">Ano:</label><br>
                  <input type="number" id="anoFilme" name="anoFilme" placeholder="Ano do filme required"><br>
                  <label for="fprodutora">Produtora:</label><br>
                  <input type="text" id="produtoraFilme" name="produtoraFilme" placeholder="Produtora do filme" required><br>
                  <label for="fdiretor">Diretor:</label><br>
                  <input type="text" id="diretorFilme" name="diretorFilme" placeholder="Diretor do filme" required><br>
                  <label for="fatores">Atores:</label><br>
                  <input type="text" id="atoresFilme" name="atoresFilme" placeholder="Atores do filme" required><br>
                  <label for="flinkImg">Link da imagem:</label><br>
                  <input type="text" id="linkImg" name="linkImg" placeholder="Link da Imagem" required><br>
                  <button type="submit">Cadastrar Filme</button>
                  <!-- <button type="button" onclick="cadastrar();">Cadastrar filme</button> -->
                </form>
            </div>
            </section>
            <section>
              <div class="guarda">
                <div class="organiza">
                  <div class="item">
                    <%for(var film of filmes){%>
                      <div class="detal">
                        <h3><%=film.nomeFilme%></h3>
                      </div>
                    <%}%>
                  </div>
                </div>
              </div>
            </section>
          
          </article>
    </main>
    
</body>
</html>